---
// src/layouts/MarkdownLayout.astro
const { title = "Untitled" } = Astro.props;
---

<section class="max-w-6xl mx-auto py-12 px-4 md:px-8">
  <h1 class="text-4xl md:text-5xl font-bold mb-6 tracking-tight">
    {title}
  </h1>
  <article class="prose prose-invert prose-neutral max-w-none">
    <slot />
  </article>
</section>
