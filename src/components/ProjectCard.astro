---
const { title, description, github, website } = Astro.props;
---

<div
    class="border border-white/10 rounded-lg p-6 bg-white/5 hover:bg-white/10 transition group"
>
    <h2 class="text-3xl font-semibold mb-2 underline underline-offset-4">{title}</h2>
    <p class="text-xl text-white/70 mb-4">{description}</p>

    <div class="flex gap-4">
        {
            github && (
                <a
                    href={github}
                    class="text-lg text-blue-400 group-hover:text-blue-300 transition"
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    GitHub →
                </a>
            )
        }
        {
            website && (
                <a
                    href={website}
                    class="text-lg text-green-400 group-hover:text-green-300 transition"
                    target="_blank"
                    rel="noopener noreferrer"
                >
                    Website →
                </a>
            )
        }
    </div>
</div>
